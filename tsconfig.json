{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "build/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ]
  },
  "include": [
    "src/",
    "src/client",
    "src/server",
    ".eslintrc.js",
    "webpack.config.ts",
    "globals.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}